<%- contentFor('conteudo') %>

<% if (lastBook != undefined) { %>
    <h2> Ultimo Livro visitado </h2>
    <h3> <%=data.nomelivro %> </h3>
    <div id="imgultimoacesso">
        <a href="book/<%=lastBook %>" target="_self">
            <img src=<%=data.imglivro %> alt="Imagem do livro <%= data.nomelivro %>" width="150">
        </a>        
    </div>
    <%- data.avalmedia %>
    <a href="edit/<%=lastBook %>"> Editar Livro</a>
    <a href="delet/<%=lastBook %>"> Excluir Livro</a>
<% } %>

<h2> Livros Dispon√≠veis </h2>

<% short.forEach( function (livro) { %>
    <h3><%= livro.nomelivro %></h3>
